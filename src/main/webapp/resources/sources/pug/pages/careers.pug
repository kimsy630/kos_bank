extends  ../_skeleton

//- Includes
include ../components/_ui-inline-subscribe-form

block variables
	- var activeCategory = 'careers'
	- var pageName = 'Careers'

block page 
	// Page Header
	include ../sections/_header-transparent

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	// Join Our Team
	section.section.section-lg.section-bg-custom(style="background-image: url(images/bg-image-1.jpg);")
		.container.text-center
			.row.justify-content-center
				.col-md-12.col-xl-10
					h2 Join Our Team
					.heading-6 Take a job opportunity of a lifetime â€“ join the team of Dot Bank. We cherish active employees willing to work on projects of any type and complexity. If you are enthusiastic about banking and ready to make impactful decisions, feel free to send us your CV.
					a.button.button-lg.button-primary(href='contacts.html') Contact Us

	// Your Career Starts Here
	section.section.section-md.bg-gray-100
		.container.text-center
			h2.custom-title: span Your Career Starts Here
			.row
				// Isotope Filters
				.col-lg-12
					.isotope-filters.isotope-filters-horizontal.isotope-filters-line.isotope-inline-filters
						button.isotope-filters-toggle.button.button-sm.button-primary(data-custom-toggle='#isotope-filters', data-custom-toggle-disable-on-blur="true") Filter
							span.caret
						ul.isotope-filters-list#isotope-filters
							li
								a.active(data-isotope-filter='*', data-isotope-group='gallery', href='#') All Cities
							li
								a(data-isotope-filter='Category 1', data-isotope-group='gallery', href='#') San Diego
							li
								a(data-isotope-filter='Category 2', data-isotope-group='gallery', href='#') New York
							li
								a(data-isotope-filter='Category 3', data-isotope-group='gallery', href='#') Chicago

				// Isotope Content
				.col-lg-12.text-left
					.isotope(data-isotope-layout='fitRows', data-isotope-group='gallery')
						.row
							.col-sm-6.col-md-4.isotope-item(data-filter='*')
								+box-minimal({
									hot: true,
									title: "Strategist",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 3')
								+box-minimal({
									hot: true,
									title: "Marketer",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 3')
								+box-minimal({
									title: "Reporting Analyst",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 3')
								+box-minimal({
									title: "Finance Analyst",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 2')
								+box-minimal({
									title: "Office Manager",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 2')
								+box-minimal({
									title: "PR Manager",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 1')
								+box-minimal({
									title: "Wealth Strategy Associate",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 1')
								+box-minimal({
									title: "Accountant",
									link: "single-job.html"
								})
							.col-sm-6.col-md-4.isotope-item(data-filter='Category 1')
								+box-minimal({
									title: "Customer Care Manager",
									link: "single-job.html"
								})

	// Page Footer
	include ../sections/_footer-1
