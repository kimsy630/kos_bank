block page 
	// Page Header
	include ../sections/_header-transparent

	+breadcrumbs({
		category: activeCategory,
		path: [pageName]
	})

	// Base typography 
	section.section.section-lg.bg-default
		.container
			.row
				.col-xl-8
					ul.list-xl
						li
							h1 H1 Heading
